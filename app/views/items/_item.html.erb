<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <a href="#">
      <%= image_tag(item.image_url, class: 'card-img-top') %>
    </a>
    <div class="card-body">
      <h4 class="card-title">
        <%= link_to item.title, item_path(item) %>
      </h4>
      <h5>$ <%= item.price %></h5>
      <p class="card-text">
        <%= truncate(strip_tags(item.description),length: 80) %>
      </p>
    </div>
    <div class="card-footer">
      <small>
        Date:
          <time><%= item.created_at.to_date.strftime("%d %B, %Y") %></time>
        <% if user_signed_in? %>
          |
          <%= link_to 'Edit', edit_item_path(item) %>
          |
          <%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure ?'  } %>
        <% end %>
      </small>
    </div>
  </div>
</div>
