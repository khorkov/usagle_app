<%= render 'common/errors', resource: @item %>

<%= form_for [:admin, @item], html: { multipart: true  } do |f| %>

  <div class="form-group">
    <%= f.label :title, class: "exampleInputEmail1" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 6, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true  },  class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select :status, options_for_select(@statuses.collect { |s| [s[0].humanize, s[0]]  }, selected: @item.status), {} , class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "#{ @item.new_record? ? 'Create' : 'Edit' }", class: 'btn btn-primary' %>
  </div>

<% end %>