<div class="col-lg-3">
  <h1 class="my-4">Categories</h1>
  <div class="list-group">
    <% @categories.each do |category| %>
      <a href="#"><%= link_to category.name, category, class: "list-group-item" %></a>
  <% end %>
  </div>
  <h1 class="my-4">Sorting by</h1>
  <p>
    <i class="fa fa-sort-amount-desc" aria-hidden="true"></i>
      <%= link_to "New on top", items_path(order: "desc") %>
    <i class="fa fa-sort-amount-asc" aria-hidden="true"></i>
      <%= link_to "Old on top", items_path(order: "asc") %>
  </p>
</div>
